                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:padding="6dp"
                    android:src="@drawable/walk"
                    android:contentDescription="TODO" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_toStartOf="@id/run"
                    android:text="Running, jogging, and even walking increase blood flow to the brain and release natural mood-elevating compounds that helps to improve your mood and relieve stress"
