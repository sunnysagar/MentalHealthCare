        android:layout_height="wrap_content"
        android:padding="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yoga"
                android:textAllCaps="true"
                android:layout_marginStart="12dp"
                android:textSize="26sp"
                android:textStyle="bold"
                android:letterSpacing="0.06"
                android:fontFamily="@font/bigshot_one"
                android:textColor="#457700"
                android:padding="3dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="There’s nothing like the serenity, bliss, and relaxation that can come following a good yoga session.\nOne of the primary reasons for this sense of upliftment is that exercise naturally increases serotonin levels in our brains."
                android:layout_marginStart="9dp"
                android:layout_marginTop="7dp"
                android:textSize="16sp"
                android:fontFamily="@font/tienne"
                android:textColor="@color/black"
                android:padding="3dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/yog"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:padding="6dp"
                    android:src="@drawable/yoga" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_toStartOf="@id/yog"
                    android:text="Seratonin is a neurotransmitter that makes us feel good. Unfortunately, it’s often deficient in people who suffer from depressive disorders."
                    android:layout_marginStart="9dp"
                    android:textSize="17sp"
                    android:fontFamily="@font/alatsi"
                    android:textColor="#AA3102"
                    android:padding="3dp"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yoga isn’t like other forms of exercise. In fact, it takes a unique, relaxed approach to fitness that comes in contrast to many upbeat, intense, modern workout classes."
