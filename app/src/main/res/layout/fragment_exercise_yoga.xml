                    android:id="@+id/lineV2"
                    android:layout_width="95dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="-6dp"
                    android:layout_marginEnd="20dp"
                    android:background="#C69B01"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="1. Dancing make person feels free, the body releases happy hormones like dopamine that eventually improves mood."
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/tienne"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. It helps eliminate social anxiety."
                    android:textSize="16sp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/tienne"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Reduces the chances of mental health disorders."
                    android:textSize="16sp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/tienne"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. In dancing, a person needs to be very focused on each changing movement thats boosts our memory."
                    android:textSize="16sp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/tienne"
                    android:textColor="@color/black" />

