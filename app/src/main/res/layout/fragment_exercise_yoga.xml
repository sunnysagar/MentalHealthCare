                    android:layout_marginEnd="20dp"
                    android:background="#C69B01"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="1. Improved Quality of Sleep."
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/tienne"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. It helps release hormones called endorphins that helps to reduce depression and anxiety."
                    android:textSize="16sp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/tienne"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. High Concentration and Focus."
                    android:textSize="16sp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/tienne"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Better Resilience that gives more  confidence and energy."
                    android:textSize="16sp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/tienne"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5. Improved social life and better mental growth ."
                    android:textSize="16sp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/tienne"
                    android:textColor="@color/black" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dance"
                android:textAllCaps="true"
                android:layout_marginStart="12dp"
                android:textSize="26sp"
                android:textStyle="bold"
                android:letterSpacing="0.06"
                android:fontFamily="@font/bigshot_one"
                android:textColor="#457700"
                android:padding="3dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dancing has always been a part of our culture, from traditional rituals to celebrations, it is something that widely appeals to people from all walks of life."
                android:layout_marginStart="9dp"
                android:layout_marginTop="7dp"
                android:textSize="16sp"
                android:fontFamily="@font/tienne"
                android:textColor="@color/black"
                android:padding="3dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
