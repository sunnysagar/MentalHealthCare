                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/tienne"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Relieves chronic stress patterns and mind."
                    android:textSize="16sp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/tienne"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/exmY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="some of the examples are..."
                    android:textSize="16sp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/dm_serif_text"
                    android:textColor="#7A0101"/>

                <TextView
                    android:id="@+id/likY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/aladin"
                    android:visibility="gone"
                    android:text="Sukhasana,  Adho Mukha Svanasana, \nUrdhva Mukha Svanasana, \nSalamba Sarvangasana,  Uttanasana, \nBalasana,  Savasana"
                    android:textColor="@color/black"/>

                <TextView
