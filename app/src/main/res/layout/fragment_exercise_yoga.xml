                android:layout_marginTop="4dp"
                android:textSize="16sp"
                android:fontFamily="@font/tienne_bold"
                android:textColor="@color/black"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/km1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="know more.."
                android:gravity="end"
                android:layout_marginEnd="50dp"
                android:visibility="visible"
                android:fontFamily="@font/aladin"
                android:textColor="#457700" />
            <TextView
                android:id="@+id/close1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Close"
                android:textSize="16dp"
                android:gravity="end"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="50dp"
                android:visibility="gone"
                android:fontFamily="@font/aladin"
                android:textColor="#457700" />

            <LinearLayout
                android:id="@+id/bnLL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="9dp"
                android:layout_marginTop="7dp"
                android:visibility="gone"
                android:padding="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Benefits"
                    android:textSize="21sp"
                    android:fontFamily="@font/tienne_bold"
                    android:textColor="#C69B01" />

                <View
                    android:id="@+id/lineV"
                    android:layout_width="95dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="-6dp"
                    android:layout_marginEnd="20dp"
                    android:background="#C69B01"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Meditation, visualization, and focusing on breathing can help with letting go of worry and fear."
